html, body
 margin: 0
 padding: 0
 height: 100%
 width: 100%

html
 overflow: auto
 overflow-y: scroll

// header
#header
  background-color: #242D4A
  display: flex
  flex-direction: row
  align-items: flex-start

  @media screen and (min-width: 996px)
    min-height: 100%

#header #intro
  flex-basis: 100%
  font-size: 24px
  color: white
  padding: 1em

  @media screen and (min-width: 480px)
    padding: 2em

  @media screen and (min-width: 996px)
    flex-basis: 45%
    padding-top: 50px
    paddiing-left: 50px

#header h1
  margin: 0
  font-family: 'Creepster'
  font-size: 2em
  text-shadow: 5px 3px 5px rgba(0,0,0,0.5)
  letter-spacing: 5px
  color: #E9B427

  @media screen and (min-width: 480px)
    font-size: 3em
  @media screen and (min-width: 996px)
    font-size: 4em

#header #intro-text
  margin: 0
  line-height: 1.45
  font-family: 'Montserrat'
  font-size: 16px

  @media screen and (min-width: 480px)
    font-size: 20px

#header #intro-text p
  margin-top: 10px

#header #wolf
  flex-basis: 55%
  align-self: flex-end
  display: none
  @media screen and (min-width: 996px)
    display: initial

#header #wolf img
  max-width: 100%
  max-height: 100%
  float: right


// toc
#toc
  min-height: 100%
  background-color: #e9b427
  background-image: url("./img/vampire.png")
  background-repeat: no-repeat
  background-position: left top

  box-sizing: border-box
  background-size: auto 100%

#toc ul
  padding: 0px
  margin: 0px
