html, body
 margin: 0
 padding: 0
 height: 100%
 width: 100%

html
 overflow: auto
 overflow-y: scroll

// header
#header
  background-color: #242D4A
  display: flex
  flex-direction: row
  align-items: flex-start

#header #intro
  font-size: 24px
  color: white
  padding: 2em
  flex: 1

  @media screen and (min-width: 996px)
    padding-top: 50px
    paddiing-left: 50px

#header h1
  margin: 0
  font-size: 4em
  color: #E9B427
  font-family: 'Creepster'
  letter-spacing: 5px

#header #intro-text
  margin: 0
  line-height: 1.45
  font-family: 'Montserrat'
  font-size: 20px

#header #intro-text p
  margin-top: 10px

#header #wolf
  flex: 2
  align-self: flex-end
  display: none
  @media screen and (min-width: 996px)
    display: initial

#header #wolf img
  max-width: 100%
  max-height: 100%
  width: 100%
  height: auto
  float: right

// toc
#toc
  min-height: 100%
  background-color: #e9b427
  background-image: url("./img/vampire.png")
  background-repeat: no-repeat
  background-position: left top

  box-sizing: border-box
  background-size: auto 100%

#toc ul
  padding: 0px
  margin: 0px
