html, body
 margin: 0
 padding: 0
 height: 100%
 width: 100%

html
 overflow: auto
 overflow-y: scroll

// header
#header
  background-color: #242D4A

  @media screen and (min-width: 1200px)
    min-height: 100%
    background-image: url("./img/wolf.png")
    background-repeat: no-repeat
    background-position: right top
    box-sizing: border-box
    background-size: auto 100%

#header #intro
  font-size: 24px
  color: white
  padding: 2em

  @media screen and (min-width: 1200px)
    position: absolute
    bottom: 0
    left: 50px

#header h1
  margin: 0
  font-size: 4em
  color: #E9B427
  font-family: 'Creepster', cursive
  letter-spacing: 5px

#header #intro-text
  line-height: 1.3
  font-family: concourse-t4
  font-size: 22px

  @media screen and (min-width: 1200px)
    width: 40vw

// toc
#toc
  min-height: 100%
  background-color: #612A81
  background-image: url("./img/vampire.png")
  background-repeat: no-repeat
  background-position: left top
  box-sizing: border-box
  background-size: auto 100%
